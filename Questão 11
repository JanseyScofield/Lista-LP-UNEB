/*)Faça um algoritmo que leia 3 valores l1, l2 e l3 e verifique se formam um triângulo. Se formarem, calcule e escreva a área do triângulo formado. Se não formarem, escreva -1.*/

#include <stdio.h>
#include <math.h>
#include <locale.h>

main(){
	setlocale(LC_ALL,"");
	
	float l1, l2, l3;
	float A,B,C, diferencaBC;
	float p, altura, area;
	
	scanf("%f %f %f",&l1,&l2,&l3);
	
	if((l1>l2)&&(l1>l3)){
		A = l1;
		B = l2;
		C = l3;
	}
	else if((l2>l1)&&(l2>l3)){
		A = l2;
		B = l1;
		C = l3;
	}
	else if((l3>l1)&&(l3>l2)){
		A = l3;
		B = l2;
		C = l1;
	}
	else if(l1 == l2 && l1==l3){
		A = l1;
		B = l2;
		C = l3;
	}
	else if(l1 == l2 && l1>l3){
		A = l1;
		B = l2;
		C = l3;
	}
	else if(l1 == l3 && l1>l2){
		A = l1;
		B = l3;
		C = l2;
	}
	else if(l3==l2 && l3>l1){
		A = l3;
		B = l2;
		C = l1;
	}
	if(B-C < 0){
		diferencaBC = (B-C)*(-1);
	}
	else{
		diferencaBC = B-C;
	}
	
	if(A>(B+C) || (A<diferencaBC)){
		printf("-1.");
	}
	else{
		printf("Esse é um triângulo ");
		if(A==B && A==C){
			area = ((A*A)*sqrt(3))/4;
			printf("equilátero ");
		}
		else if(A!=B && A!=C && B!=C){
			p = (A+B+C)/2;
			area = sqrt(p*(p-A)*(p-B)*(p-C));
			printf("escaleno ");
		}
		else{
			altura = sqrt((B*B)/((A/2)*(A/2)));
			area = (A*altura)/2;
			printf("isóceles ");
		}
		printf("com  área de: %.2f", area);
	}
}
